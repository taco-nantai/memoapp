<form action="/memo/<%= @memo['id'] %>" method="POST">
  <h3>タイトル</h3>
  <input type="text" id="title" name="title" value="<%= h @memo['title'] %>">
  <h3>内容</h3>
  <textarea id="text" name="text"><%= h @memo['text'] %></textarea>
  <input type="hidden" name="_method" value="PATCH">
  <input class="button" type="submit" value="保存">
</form>
